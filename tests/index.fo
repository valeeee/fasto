//returns 1 if j and j are the same value. 
fun int diagIndex ([int] index) = 
    if index[0] == index [1] then 1 else 0

//this works only for squared matrix 
fun int maxIndex ([[int]] matrix) =  
    size(sizeB(matrix))*size(sizeB(matrix))

